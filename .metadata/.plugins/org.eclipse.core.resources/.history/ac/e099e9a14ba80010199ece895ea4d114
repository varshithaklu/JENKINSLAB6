package com.dev.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import com.dev.entity.Order;
import com.klef.dev.repository.OrderRepository;

@Service
public class OrderService 
{
    @Autowired
    private OrderRepository repository;

    public List<Order> getAllOrders() 
    {
        return repository.findAll();
    }

    public Order getOrderById(Long id) 
    {
        return repository.findById(id)
                .orElseThrow(() -> new RuntimeException("Order not found"));
    }

    public Order createOrder(Order order) 
    {
        while (repository.existsById(order.getId())) 
        {
            order.setId((long) (Math.random() * 100000));
        }
        return repository.save(order);
    }

    public Order updateOrder(Long id, Order updatedOrder) 
    {
        Order order = getOrderById(id);
        order.setTitle(updatedOrder.getTitle());
        order.setDescription(updatedOrder.getDescription());
        order.setOrderDate(updatedOrder.getOrderDate());
        order.setDeliveryDate(updatedOrder.getDeliveryDate());
        order.setQuantity(updatedOrder.getQuantity());
        order.setPrice(updatedOrder.getPrice());
        order.setPriority(updatedOrder.getPriority());
        order.setStatus(updatedOrder.getStatus());
        return repository.save(order);
    }
    
    public Order updateStatus(Long id, Order updatedOrder) 
    {
        Order order = getOrderById(id);
        order.setStatus(updatedOrder.getStatus());
        return repository.save(order);
    }

    public void deleteOrder(Long id) 
    {
        repository.deleteById(id);
    }
}
